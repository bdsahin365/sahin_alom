{
  "id": "hero",
  "type": "SharedSlice",
  "name": "Hero",
  "description": "Hero section with animated background, headline, CTAs, and social icons",
  "variations": [
    {
      "id": "default",
      "name": "Default",
      "docURL": "...",
      "version": "initial",
      "description": "Hero section for personal portfolio",
      "imageUrl": "",
      "primary": {
        "eyebrow": {
          "type": "Text",
          "config": {
            "label": "Eyebrow",
            "placeholder": "UX • Systems • AI"
          }
        },
        "name": {
          "type": "Text",
          "config": {
            "label": "Name",
            "placeholder": "Sahin Alom"
          }
        },
        "headline": {
          "type": "StructuredText",
          "config": {
            "label": "Headline",
            "placeholder": "UX Designer with Engineering Systems Thinking",
            "allowTargetBlank": true,
            "single": "heading1,heading2,strong,em"
          }
        },
        "description": {
          "type": "StructuredText",
          "config": {
            "label": "Description",
            "placeholder": "Supporting text...",
            "allowTargetBlank": true,
            "multi": "paragraph,strong,em,hyperlink"
          }
        },
        "primaryCtaLabel": {
          "type": "Text",
          "config": {
            "label": "Primary CTA Label",
            "placeholder": "Get in Touch"
          }
        },
        "primaryCtaLink": {
          "type": "Text",
          "config": {
            "label": "Primary CTA Link",
            "placeholder": "#contact"
          }
        },
        "secondaryCtaLabel": {
          "type": "Text",
          "config": {
            "label": "Secondary CTA Label",
            "placeholder": "View LinkedIn"
          }
        },
        "secondaryCtaLink": {
          "type": "Link",
          "config": {
            "label": "Secondary CTA Link",
            "placeholder": "LinkedIn URL",
            "select": "web"
          }
        },
        "showSocialIcons": {
          "type": "Boolean",
          "config": {
            "label": "Show Social Icons",
            "default_value": true,
            "placeholder_true": "Yes",
            "placeholder_false": "No"
          }
        }
      },
      "items": {}
    }
  ]
}